<div class="form-container">
  <div class="page-header">
    <h1 class="main-title">Add New Time Slot</h1>
    <div class="nav-breadcrumbs">
      <span>Health Care Center</span> / <span>Resources Management</span> / <span>Add Time Slot</span>
    </div>
  </div>

  <%= form_with(model: @time_slot, url: hcc_create_time_slot_path, method: :post, class: "timeslot-form") do |f| %>
    <div class="form-card">
      <div class="card-header">
        <h2>Time Slot Details</h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <%= f.label :name, "Slot Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-input", placeholder: "Enter a name for this time slot (e.g. Morning Session)" %>
        </div>

        <div class="form-group">
          <%= f.label :day, "Day of Week", class: "form-label" %>
          <%= f.select :day, ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"], { include_blank: "Select day" }, class: "form-select" %>
        </div>

        <div class="time-selection-group">
          <div class="form-group time-field">
            <%= f.label :begin, "Start Time", class: "form-label" %>
            <%= f.time_field :begin, class: "form-input", min: "08:00", max: "20:00" %>
          </div>

          <div class="form-group time-field">
            <%= f.label :end, "End Time", class: "form-label" %>
            <%= f.time_field :end, class: "form-input", min: "08:00", max: "20:00" %>
          </div>
        </div>

        <div class="time-preview">
          <div class="time-preview-label">Preview:</div>
          <div class="time-preview-content">
            <span class="preview-day">Selected day</span> at 
            <span class="preview-time">selected time range</span>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Add Time Slot", class: "submit-button" %>
      <%= link_to "Cancel", hcc_view_doctors_time_slots_path, class: "cancel-button" %>
    </div>
  <% end %>
</div>

<style>
  /* General Styles */
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
  }

  .form-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1.5rem;
    animation: fadeIn 0.5s;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 2rem;
  }

  .main-title {
    font-size: 2rem;
    font-weight: bold;
    color: #163269;
    margin-bottom: 0.5rem;
  }

  .nav-breadcrumbs {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  /* Form Card */
  .form-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .card-header {
    background-color: #f1f3f5;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #dee2e6;
  }

  .card-header h2 {
    margin: 0;
    color: #163269;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .card-body {
    padding: 1.5rem;
  }

  /* Form Elements */
  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group:last-child {
    margin-bottom: 0;
  }

  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #495057;
  }

  .form-input, .form-select {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #ced4da;
    border-radius: 4px;
    transition: border-color 0.3s;
  }

  .form-input:focus, .form-select:focus {
    border-color: #86b7fe;
    outline: none;
    box-shadow: 0 0 0 0.25rem rgba(22, 50, 105, 0.1);
  }

  /* Time Selection */
  .time-selection-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .time-field {
    flex: 1;
    margin-bottom: 0;
  }

  /* Time Preview */
  .time-preview {
    background-color: #e3f2fd;
    border-radius: 6px;
    padding: 1rem;
    border-left: 4px solid #0d6efd;
    margin-top: 1rem;
  }

  .time-preview-label {
    font-weight: 600;
    color: #0d6efd;
    margin-bottom: 0.25rem;
  }

  .time-preview-content {
    color: #0d6efd;
    font-size: 1.1rem;
  }

  .preview-day, .preview-time {
    font-weight: 600;
  }

  /* Form Actions */
  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .submit-button {
    padding: 0.75rem 1.5rem;
    background-color: #20c997;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .submit-button:hover {
    background-color: #1ba87e;
  }

  .cancel-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #ced4da;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .cancel-button:hover {
    background-color: #e9ecef;
    color: #212529;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .time-selection-group {
      flex-direction: column;
      gap: 1rem;
    }

    .form-actions {
      flex-direction: column;
    }

    .submit-button, .cancel-button {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add animation for card
    const card = document.querySelector('.form-card');
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    
    setTimeout(() => {
      card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }, 100);

    // Live preview of time slot
    const dayField = document.querySelector('select[name="time_slot[day]"]');
    const beginField = document.querySelector('input[name="time_slot[begin]"]');
    const endField = document.querySelector('input[name="time_slot[end]"]');
    const previewDay = document.querySelector('.preview-day');
    const previewTime = document.querySelector('.preview-time');

    function updatePreview() {
      const day = dayField.value || 'Selected day';
      
      let beginTime = 'start time';
      if (beginField.value) {
        beginTime = formatTimeString(beginField.value);
      }
      
      let endTime = 'end time';
      if (endField.value) {
        endTime = formatTimeString(endField.value);
      }
      
      previewDay.textContent = day;
      previewTime.textContent = `${beginTime} to ${endTime}`;
    }

    function formatTimeString(timeString) {
      // Convert 24-hour format to 12-hour format with AM/PM
      const time = new Date(`2000-01-01T${timeString}`);
      return time.toLocaleTimeString('en-US', { 
        hour: 'numeric', 
        minute: '2-digit', 
        hour12: true 
      });
    }

    dayField.addEventListener('change', updatePreview);
    beginField.addEventListener('input', updatePreview);
    endField.addEventListener('input', updatePreview);

    // Initialize preview
    updatePreview();
  });
</script>