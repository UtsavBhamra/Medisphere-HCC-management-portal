<div class="leave-letter-container">
  <div class="leave-letter-header">
    <h1 class="leave-letter-title">Leave Letter Details</h1>
    <div class="leave-letter-meta">
      <p class="leave-letter-id">Reference ID: <%= @leave_letter.id %></p>
      <p class="leave-letter-status">Status: <span class="status-badge"><%= @leave_letter.status %></span></p>
    </div>
  </div>

  <div class="leave-letter-card">
    <div class="card-header">
      <h2>Student Information</h2>
    </div>
    <div class="card-body">
      <div class="info-row">
        <div class="info-label">Name:</div>
        <div class="info-value"><%= @leave_letter.appointment.student.user.name %></div>
      </div>
      <div class="info-row">
        <div class="info-label">Subject:</div>
        <div class="info-value"><%= @leave_letter.title %></div>
      </div>
    </div>
  </div>

  <div class="leave-letter-card">
    <div class="card-header">
      <h2>Leave Duration</h2>
    </div>
    <div class="card-body">
      <div class="date-container">
        <div class="date-block">
          <div class="date-label">Start Date</div>
          <div class="date-value"><%= @leave_letter.start_date %></div>
        </div>
        <div class="date-arrow">â†’</div>
        <div class="date-block">
          <div class="date-label">End Date</div>
          <div class="date-value"><%= @leave_letter.end_date %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="leave-letter-card">
    <div class="card-header">
      <h2>Applicant Statement</h2>
    </div>
    <div class="card-body">
      <div class="statement-content">
        <%= @leave_letter.applicant_response %>
      </div>
    </div>
  </div>

  <div class="leave-letter-card">
    <div class="card-header">
      <h2>Health Care Center Remarks</h2>
    </div>
    <div class="card-body">
      <div class="remarks-container">
        <% if @leave_letter.hcc_comments.present? %>
          <%= @leave_letter.hcc_comments %>
        <% else %>
          <span class="no-remarks">No comments provided</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="leave-letter-card">
    <div class="card-header">
      <h2>Dean of Student Welfare Remarks</h2>
    </div>
    <div class="card-body">
      <div class="remarks-container">
        <% if @leave_letter.dsw_comments.present? %>
          <%= @leave_letter.dsw_comments %>
        <% else %>
          <span class="no-remarks">No comments provided</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="leave-letter-footer">
    <div class="approval-timeline">
      <div class="timeline-step <%= @leave_letter.status == 'pending' || @leave_letter.status == 'forwarded' || @leave_letter.status == 'approved' ? 'active' : '' %>">
        <div class="step-marker"></div>
        <div class="step-label">Submitted</div>
      </div>
      <div class="timeline-step <%= @leave_letter.status == 'forwarded' || @leave_letter.status == 'approved' ? 'active' : '' %>">
        <div class="step-marker"></div>
        <div class="step-label">Forwarded by HCC</div>
      </div>
      <div class="timeline-step <%= @leave_letter.status == 'approved' ? 'active' : '' %>">
        <div class="step-marker"></div>
        <div class="step-label">Approved by DSW</div>
      </div>
    </div>

    <div class="action-buttons">
      <%= link_to "Back to Leave Letters", student_view_leave_letters_path, class: "back-button" %>
      <% if @leave_letter.status == 'pending' %>
        <%= link_to "Edit Leave Letter", "#", class: "edit-button" %>
      <% end %>
    </div>
  </div>
</div>

<style>
  /* General Styles */
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
  }

  .leave-letter-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 0 1.5rem;
    animation: fadeIn 0.5s;
  }

  /* Header Styles */
  .leave-letter-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .leave-letter-title {
    font-size: 2rem;
    font-weight: bold;
    color: #163269;
    margin-bottom: 0.75rem;
  }

  .leave-letter-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    color: #495057;
    font-size: 0.9rem;
  }

  /* Status Badge */
  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  /* Card Styles */
  .leave-letter-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .card-header {
    background-color: #f1f3f5;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #dee2e6;
  }

  .card-header h2 {
    margin: 0;
    color: #163269;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .card-body {
    padding: 1.5rem;
  }

  /* Info Row */
  .info-row {
    display: flex;
    margin-bottom: 1rem;
  }

  .info-row:last-child {
    margin-bottom: 0;
  }

  .info-label {
    width: 120px;
    font-weight: 600;
    color: #495057;
  }

  .info-value {
    flex-grow: 1;
    color: #212529;
  }

  /* Date Container */
  .date-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  .date-block {
    text-align: center;
    padding: 1rem;
    background-color: #f1f3f5;
    border-radius: 8px;
    min-width: 150px;
  }

  .date-label {
    font-size: 0.85rem;
    color: #6c757d;
    margin-bottom: 0.25rem;
  }

  .date-value {
    font-size: 1.1rem;
    font-weight: 500;
    color: #212529;
  }

  .date-arrow {
    font-size: 1.5rem;
    color: #6c757d;
  }

  /* Statement Content */
  .statement-content {
    background-color: #f8f9fa;
    padding: 1.5rem;
    border-radius: 6px;
    border-left: 4px solid #ced4da;
    font-size: 1rem;
    line-height: 1.7;
    color: #212529;
  }

  /* Remarks */
  .remarks-container {
    background-color: #f8f9fa;
    padding: 1.25rem;
    border-radius: 6px;
    font-size: 1rem;
    color: #212529;
    line-height: 1.6;
  }

  .no-remarks {
    color: #6c757d;
    font-style: italic;
  }

  /* Footer */
  .leave-letter-footer {
    margin-top: 2.5rem;
  }

  /* Timeline */
  .approval-timeline {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .approval-timeline::before {
    content: "";
    position: absolute;
    top: 12px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #ced4da;
    z-index: 0;
  }

  .timeline-step {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
    width: 33.333%;
  }

  .step-marker {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: #e9ecef;
    border: 2px solid #ced4da;
    margin-bottom: 0.5rem;
  }

  .step-label {
    font-size: 0.85rem;
    color: #6c757d;
    text-align: center;
  }

  .timeline-step.active .step-marker {
    background-color: #198754;
    border-color: #198754;
  }

  .timeline-step.active .step-label {
    color: #212529;
    font-weight: 500;
  }

  /* Action Buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .back-button, .edit-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .back-button {
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #ced4da;
  }

  .back-button:hover {
    background-color: #e9ecef;
    color: #212529;
  }

  .edit-button {
    background-color: #0d6efd;
    color: white;
    border: 1px solid #0d6efd;
  }

  .edit-button:hover {
    background-color: #0b5ed7;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .leave-letter-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .date-container {
      flex-direction: column;
      gap: 1rem;
    }

    .date-arrow {
      transform: rotate(90deg);
    }

    .info-row {
      flex-direction: column;
      margin-bottom: 1.5rem;
    }

    .info-label {
      margin-bottom: 0.25rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set appropriate color for status badge
    const statusBadge = document.querySelector('.status-badge');
    const status = statusBadge.textContent.trim().toLowerCase();
    
    if (status === 'pending') {
      statusBadge.style.backgroundColor = '#ffc107';
      statusBadge.style.color = '#212529';
    } else if (status === 'forwarded') {
      statusBadge.style.backgroundColor = '#0dcaf0';
      statusBadge.style.color = '#212529';
    } else if (status === 'approved') {
      statusBadge.style.backgroundColor = '#198754';
      statusBadge.style.color = 'white';
    } else if (status === 'rejected') {
      statusBadge.style.backgroundColor = '#dc3545';
      statusBadge.style.color = 'white';
    } else {
      statusBadge.style.backgroundColor = '#6c757d';
      statusBadge.style.color = 'white';
    }

    // Add animation for cards
    const cards = document.querySelectorAll('.leave-letter-card');
    
    cards.forEach((card, index) => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        card.style.opacity = '1';
        card.style.transform = 'translateY(0)';
      }, 100 * (index + 1));
    });
  });
</script>