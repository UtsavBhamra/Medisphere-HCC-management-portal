<div class="profile-container">
  <div class="page-header">
    <h1 class="main-title">Student Profile</h1>
    <div class="nav-breadcrumbs">
      <span>Student Portal</span> / <span>Profile</span>
    </div>
  </div>

  <div class="profile-card">
    <div class="card-header">
      <h2>Personal Information</h2>
    </div>
    <div class="card-body">
      <div class="profile-info">
        <div class="info-group">
          <div class="info-row">
            <div class="info-label">Name</div>
            <div class="info-value"><%= @user.name %></div>
          </div>
          <div class="info-row">
            <div class="info-label">Email</div>
            <div class="info-value"><%= @user.email %></div>
          </div>
          <div class="info-row">
            <div class="info-label">Role</div>
            <div class="info-value"><%= @user.role %></div>
          </div>
        </div>
        <div class="info-group">
          <div class="info-row">
            <div class="info-label">Student ID</div>
            <div class="info-value"><%= @student.student_id %></div>
          </div>
          <div class="info-row">
            <div class="info-label">Department</div>
            <div class="info-value"><%= @student.department %></div>
          </div>
          <div class="info-row">
            <div class="info-label">Program Type</div>
            <div class="info-value"><%= @student.program_type %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="profile-actions">
    <%= link_to "Back to Dashboard", root_path, class: "back-button" %>
  </div>
</div>

<style>
  /* General Styles */
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
  }

  .profile-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 0 1.5rem;
    animation: fadeIn 0.5s;
  }

  /* Page Header */
  .page-header {
    margin-bottom: 2rem;
  }

  .main-title {
    font-size: 2rem;
    font-weight: bold;
    color: #163269;
    margin-bottom: 0.5rem;
  }

  .nav-breadcrumbs {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  /* Profile Card */
  .profile-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
    overflow: hidden;
  }

  .card-header {
    background-color: #f1f3f5;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #dee2e6;
  }

  .card-header h2 {
    margin: 0;
    color: #163269;
    font-size: 1.3rem;
    font-weight: 600;
  }

  .card-body {
    padding: 1.5rem;
  }

  /* Profile Info */
  .profile-info {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .info-group {
    flex: 1;
    min-width: 300px;
  }

  .info-row {
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #eee;
  }

  .info-row:last-child {
    margin-bottom: 0;
    border-bottom: none;
    padding-bottom: 0;
  }

  .info-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #6c757d;
    margin-bottom: 0.3rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-value {
    font-size: 1.1rem;
    color: #212529;
  }

  /* Action Buttons */
  .profile-actions {
    display: flex;
    margin-top: 1.5rem;
  }

  .back-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #ced4da;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .back-button:hover {
    background-color: #e9ecef;
    color: #212529;
  }

  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .profile-info {
      flex-direction: column;
      gap: 1rem;
    }

    .info-group {
      min-width: 100%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Highlight specific information based on program type
    const programTypeElement = document.querySelector('.info-value:last-child');
    const programType = programTypeElement.textContent.trim().toLowerCase();
    
    if (programType === 'undergraduate') {
      programTypeElement.style.color = '#0d6efd';
    } else if (programType === 'graduate' || programType === 'postgraduate') {
      programTypeElement.style.color = '#198754';
    } else if (programType === 'phd') {
      programTypeElement.style.color = '#6f42c1';
    }

    // Add animation for profile card
    const profileCard = document.querySelector('.profile-card');
    profileCard.style.opacity = '0';
    profileCard.style.transform = 'translateY(20px)';
    
    setTimeout(() => {
      profileCard.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
      profileCard.style.opacity = '1';
      profileCard.style.transform = 'translateY(0)';
    }, 100);
  });
</script>